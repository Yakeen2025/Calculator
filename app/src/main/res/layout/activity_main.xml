<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/edi"
        android:layout_height="wrap_content"
        android:padding="45dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seven"
        android:layout_below="@+id/edi"
        android:layout_marginTop="100dp"
        android:background="@android:color/transparent"
        android:text="7"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/four"
        android:layout_below="@+id/seven"
        android:background="@android:color/transparent"
        android:text="4"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/four"
        android:background="@android:color/transparent"
        android:id="@+id/one"
        android:text="1"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one"
        android:background="@android:color/transparent"
        android:id="@+id/ac"
        android:text="AC"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:id="@+id/eight"
        android:layout_marginTop="100dp"
        android:layout_below="@id/edi"
        android:layout_toRightOf="@+id/seven"
        android:text="8"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/five"
        android:background="@android:color/transparent"
        android:layout_toRightOf="@+id/four"
        android:layout_below="@+id/eight"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/two"
        android:background="@android:color/transparent"
        android:layout_toRightOf="@+id/one"
        android:layout_below="@id/five"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:background="@android:color/transparent"
        android:id="@+id/zero"
        android:layout_toRightOf="@id/ac"
        android:layout_below="@id/two"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:background="@android:color/transparent"
        android:layout_marginTop="100dp"
        android:layout_below="@id/edi"
        android:id="@+id/nine"
        android:layout_toRightOf="@+id/eight"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:background="@android:color/transparent"
        android:id="@+id/six"
        android:layout_toRightOf="@id/five"
        android:layout_below="@id/nine"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/three"
        android:background="@android:color/transparent"
        android:layout_toRightOf="@id/two"
        android:layout_below="@id/six"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:background="@android:color/transparent"
        android:id="@+id/dot"
        android:layout_toRightOf="@id/zero"
        android:layout_below="@id/three"/>
    <Button
        android:layout_width="wrap_content"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content"
        android:text="*"
        android:layout_marginTop="100dp"
        android:layout_below="@id/edi"
        android:id="@+id/multi"
        android:layout_toRightOf="@id/nine"/>
    <Button
        android:layout_width="wrap_content"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/div"
        android:layout_toRightOf="@id/six"

        android:layout_below="@id/multi"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="+"
        android:id="@+id/plus"
        android:layout_below="@id/div"
        android:layout_toRightOf="@id/three"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:background="@android:color/transparent"
        android:id="@+id/minus"
        android:layout_toRightOf="@id/dot"
        android:layout_below="@id/plus"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/equal"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_light"
        android:text="="
        android:textSize="33dp"
        android:layout_below="@id/ac"/>








</RelativeLayout>